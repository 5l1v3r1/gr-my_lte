<block>
  <name>Scrambler</name>
  <key>my_lte_scrambler</key>
  <category>MY_LTE</category>
  <import>import my_lte</import>
  <make>#if $name() == "PHICH"
my_lte.scrambler_phich($N_id_cell, $rnti, $set_align)
#else
my_lte.scrambler($N_id_cell, $name, $rnti, $set_align)
#end if</make>
  <param>
    <name>cell id</name>
    <key>N_id_cell</key>
    <type>int</type>
  </param>
  <param>
    <name>Channel name</name>
    <key>name</key>
    <type>enum</type>
	<option>
		<name>PBCH</name>
		<key>"PBCH"</key>
		<opt>iotype:byte</opt>
	</option>
	<option>
		<name>PDSCH</name>
		<key>"PDSCH"</key>
		<opt>iotype:byte</opt>
	</option>
	<option>
		<name>PMCH</name>
		<key>"PMCH"</key>
	</option>
	<option>
		<name>DCI</name>
		<key>"DCI"</key>
		<opt>iotype:byte</opt>
	</option>
	<option>
		<name>PHICH</name>
		<key>"PHICH"</key>
		<opt>iotype:complex</opt>
	</option>
  </param>
  <param>
    <name>RNTI</name>
    <key>rnti</key>
    <type>int</type>
    <hide>byte</hide>
  </param>
  <param>
    <name>Set align</name>
    <key>set_align</key>
    <type>int</type>
  </param>
  <sink>
    <name>in</name>
    <type>$name.iotype</type>
  </sink>
  <source>
    <name>out</name>
    <type>$name.iotype</type>
  </source>
</block>
